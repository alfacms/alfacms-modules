sub get_files_array {
 my $dir = $_[0];
 $dir =~ s/\\/\//g;
 opendir(DIR,$dir);
 my @files = grep {(!/^\.+$/) and !(-d "$dir/$_")} readdir DIR;
 closedir(DIR);
 return @files;
}

